<div>
    <h1>{{board.name}}</h1>
    <button id="createThreadBtn" > + create thread</button>
    <br>
    <ul>
        {{#each board.posts as |post|}}
        <a href="/post/{{post.slug}}"><li>{{post.title}} created by</li></a>
        {{/each}}
    </ul>
</div>

<div>
    <form>
        <div class="form-group"> 
            <label for="Textarea">Make a Post!</label>
            <textarea class="form-control" id="postInput" rows="3"></textarea>
        </div>
    </form>
    <button>Post</button>
    <button>Cancel</button>
</div>